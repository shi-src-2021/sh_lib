{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "gtest",
            "type": "shell",
            "command": "${command:gtestExplorer.runAll}",
            "dependsOn": [
                "gtest-refresh"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "gtest-refresh",
            "type": "shell",
            "command": "${command:gtestExplorer.refresh}",
            "dependsOn": [
                "gtest-build"
            ],
            "group": "test",
            "problemMatcher": []
        },
        {
            "label": "gtest-build",
            "command": "mingw32-make.exe",
            "type": "shell",
            "args": [
                "-C",
                "test/build"
            ],
            "dependsOn": [
                "gtest cmake config"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "test",
                "isDefault": false
            }
        },
        {
            "label": "gtest cmake config",
            "command": "cmake",
            "type": "shell",
            "args": [
                "-S",
                "test",
                "-B",
                "test/build",
                "-G",
                "MinGW Makefiles"
            ]
        }
    ]
}